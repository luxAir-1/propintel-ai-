{
  "$schema": "https://railway.app/railroad.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "corepack enable && pnpm install --no-frozen-lockfile && pnpm run build --filter=@propintel/api"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "pnpm run start --filter=@propintel/api",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30,
    "restartPolicyMaxRetries": 5,
    "ports": [
      {
        "port": 3001,
        "protocol": "TCP"
      }
    ]
  }
}
