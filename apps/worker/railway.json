{
  "$schema": "https://railway.app/railroad.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd /app/apps/worker && corepack enable && pnpm run build"
  },
  "deploy": {
    "startCommand": "cd /app/apps/worker && pnpm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5
  }
}
