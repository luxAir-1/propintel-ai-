{
  "$schema": "https://railway.app/railroad.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "corepack enable && pnpm install && pnpm run build --filter=@propintel/api"
  },
  "deploy": {
    "startCommand": "pnpm run start --filter=@propintel/api",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5
  }
}
