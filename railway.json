{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "npm run start",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "numReplicas": 3,
      "restartPolicyMaxRetries": 3
    },
    "staging": {
      "numReplicas": 1,
      "restartPolicyMaxRetries": 5
    }
  },
  "variables": {
    "NODE_ENV": "production",
    "PORT": "3001"
  }
}
